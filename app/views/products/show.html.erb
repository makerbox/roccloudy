
<div class="row">

<div class="col-md-5">
<%= cl_image_tag(@product.code.strip) %>
</div>

<div class="col-md-4">
<p>
  <strong>SKU:</strong>
  <%= @product.code %>
</p>
<p>
<%= @product.description %>
</p>

<p>
  <% if user_signed_in? %>
	  <% if current_user.account && current_user.account.approved == 'approved' && current_user.account.seller_level %>
	  <!-- if the user has an approved account with a seller level set, then show them their correct price -->
		  <% case current_user.account.seller_level.to_i %>
		  	<% when 1 %>
		  		$<%= @product.price1 - (@product.discount) %>
		    <% when 2 %>
		  		$<%= @product.price2 - (@product.discount) %>
		    <% when 3 %>
		  		$<%= @product.price3 - (@product.discount) %>
		    <% when 4 %>
		  		$<%= @product.price4 - (@product.discount) %>
		    <% when 5 %>
		  		$<%= @product.price5 - (@product.discount) %>
		    <% when 6 %>
		  		$<%= @product.rrp %>
		  <% end %>
	  <% end %>

	  <% if user_signed_in? %>
		  <% if current_user.account %>
			  <% if current_user.account.approved == 'approved' %>
				  	<%= simple_form_for(@quantity) do |f| %>
				  		<%= f.input :qty, input_html: {value: f.object.qty || '1'} %>
				  		<% if @order %>
				  			<%= f.hidden_field :order_id, value: @order.id %>
				  		<% end %>
				  		<%= f.hidden_field :product_id, value: @product.id %>
				  		<%= f.submit "ADD TO CART", class: 'btn btn-success' %>
				  	<% end %>
			  <% end %>
		  <% end %>
	  <% end %>
  <% end %>
</p>
</div>
 <% if current_user.orders.any? && current_user.orders.last.active == true %>
  <div class="col-md-3 cart">
    <p>
      <i class="fa fa-shopping-cart fa-2x"></i>
    </p>
    <hr>
    <p>
      <%= render 'orders/sidecart' %>
    </p>
  </div>
  <% end %>
</div>
