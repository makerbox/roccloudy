
<div class="row">

<div class="col-md-5">
<%= cl_image_tag(@product.code.strip) %>
</div>

<div class="col-md-4">
<p>
  <strong>SKU:</strong>
  <%= @product.code %>
</p>
<p>
<%= @product.description %>
</p>

<p>
  <% if user_signed_in? %>
	  <% if current_user.account && current_user.account.approved == 'approved' && current_user.account.seller_level %>
	  <!-- if the user has an approved account with a seller level set, then show them their correct price -->
		  <% case current_user.account.seller_level.to_i %>
		  	<% when 1 %>
		  		$<%= @product.price1 %>
		    <% when 2 %>
		  		$<%= @product.price2 %>
		    <% when 3 %>
		  		$<%= @product.price3 %>
		    <% when 4 %>
		  		$<%= @product.price4 %>
		    <% when 5 %>
		  		$<%= @product.price5 %>
		    <% when 6 %>
		  		$<%= @product.rrp %>
		  <% end %>
	  <% end %>

	  <% if user_signed_in? %>
		  <% if current_user.account %>
			  <% if current_user.account.approved == 'approved' %>
			  	<% if !current_user.orders.any? || !current_user.orders.where(active: true).any? %>
				  	<%= simple_form_for url: cart_order_path(product: @product) do |f| %>
	    				<%= f.input :qty %>
	    				<%= f.submit "ADD TO CART", class: 'btn btn-success' %>
					<% end %>
			  	<% else %>
				  	<%= simple_form_for @orurl: addto_order_path(product: @product) |f| %>
	    				<%= f.input :qty %>
	    				<%= f.submit "ADD TO CART", class: 'btn btn-success' %>
					<% end %>
			  	<% end %>
			  <% end %>
		  <% end %>
	  <% end %>
  <% end %>
</p>

<%= link_to 'Back', products_path %>
</div>
 <% if current_user.orders.any? %>
  <div class="col-md-3 cart">
    <p>
      <i class="fa fa-shopping-cart fa-2x"></i>
    </p>
    <hr>
    <p>
    <% if current_user.orders.last.active == true %>
      <%= render 'orders/show' %>
    <% end %>
    </p>
  </div>
  <% end %>
</div>
