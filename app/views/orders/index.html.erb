<table class="table table-striped">
	<tr>
		<th>Date</th>
		<th>Order No.</th>
		<th>Company</th>
	</tr>
	<% @orders.each do |order| %>
		
		<tr>
			<%= link_to order_path(order) do %>
				<td><%= order.created_at %></td>
				<td><%= order.order_number %></td>
				<td><%= order.user.account.company %></td>
			<% end %>
		</tr>
		
	<% end %>
</table>
<%= will_paginate @orders %>