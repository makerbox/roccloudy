<span id="notice"><%= notice %></span>
<% @order.total = 0 %>
<% if @order.quantities.any? %><%= @order.quantities.count %>
<% @order.quantities.each do |po| %>
<div class="po">
	<%= link_to product_path(Product.find_by(code: po.product.code)) do %>
	<div class="product-thumbnail">
	<%= cl_image_tag(po.product.code.strip) %>
	</div>
<%= po.product.code %>
	<% end %>
	<%= current_user.account.seller_level %>
	<% case current_user.account.seller_level.to_i %>
		  	<% when 1 %>
		  		<% @setprice = po.product.price1 %>
		  		$<%= po.product.price1 %>
		    <% when 2 %>
		    <% @setprice = po.product.price2 %>
		  		$<%= po.product.price2 %>
		    <% when 3 %>
		    <% @setprice = po.product.price3 %>
		  		$<%= po.product.price3 %>
		    <% when 4 %>
		    <% @setprice = po.product.price4 %>
		  		$<%= po.product.price4 %>
		    <% when 5 %>
		    <% @setprice = po.product.price5 %>
		  		$<%= po.product.price5 %>
		    <% when 6 %>
		    <% @setprice = po.product.rrp %>
		  		$<%= po.product.rrp %>
	<% end %>
	x <%= po.qty %> ------- $<%= po.qty * @setprice %><% @order.total = @order.total + (po.qty * @setprice) %>

<%= link_to 'remove', remove_product_path(id: po.id), class: 'btn btn-warning remove-btn' %></div>
<% end %>
<% end %>
<hr>
TOTAL (excl. freight) = $<%= @order.total %>
<%= link_to ' SEND ORDER', sendorder_order_path(@order, total: @order.total), class: 'fa fa-paper-plane btn btn-info' %><hr>
<%= link_to ' cancel', order_path(@order), method: :delete, class: 'fa fa-trash btn btn-danger' %>

