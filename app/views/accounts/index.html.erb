<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Company</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Seller level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.user %></td>
        <td><%= account.company %></td>
        <td><%= account.address %></td>
        <td><%= account.suburb %></td>
        <td><%= account.state %></td>
        <td><%= account.country %></td>
        <td><%= account.phone %></td>
        <td><%= account.first_name %></td>
        <td><%= account.last_name %></td>
        <% if account.seller_level? %>
         <td><%= account.seller_level %></td>
         <% else %>
         <td>pending</td>
         <% end %>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

