<% if current_user.has_role? :admin %>
<p>
  <strong>Seller level:</strong>
  <% if @account.seller_level  && @account.seller_level != '' %>
    <%= @account.seller_level %>
  <% else %>
    <%= link_to 'Please moderate', edit_account_path(@account), class: 'btn btn-warning' %>
  <% end %>
</p>
<% end %>

